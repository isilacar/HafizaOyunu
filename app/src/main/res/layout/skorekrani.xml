<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:ads="http://schemas.android.com/apk/res-auto"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:layout_gravity="center"
                                                   android:background="@drawable/renkliyaprak"
                                                   tools:context=".SkorEkrani">


    <TextView
            android:id="@+id/hata"
            android:layout_width="127dp"
            android:layout_height="45dp"
            android:layout_marginTop="240dp"
            android:text="AJAJ"
            android:textColor="#AA00FF"
            android:textSize="25sp"

            android:visibility="visible"
            ads:layout_constraintTop_toTopOf="parent" ads:layout_constraintStart_toStartOf="parent"
            android:gravity="right"/>

    <Button
            android:id="@+id/button"
            android:layout_width="192dp"
            android:layout_height="58dp"
            android:layout_marginTop="148dp"
            android:background="@drawable/tekraroyna"
            android:text="@string/kazandinButon"
            android:textColor="#FFFF00"
            android:textSize="20sp"
            ads:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hata"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewskor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="112dp"></com.google.android.gms.ads.AdView>
    <TextView
            android:text="@string/kazandinBaslik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hata2" ads:layout_constraintStart_toEndOf="@+id/hata"
            ads:layout_constraintTop_toTopOf="parent" android:layout_marginTop="240dp" android:visibility="visible"
            android:textColor="#AA00FF" android:textSize="25sp" android:textStyle="italic"
            android:gravity="start"/>


</androidx.constraintlayout.widget.ConstraintLayout>